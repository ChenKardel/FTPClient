<ListBoxItem x:Class="FtpClient.controller.FileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FtpClient.controller"
             mc:Ignorable="d" d:DesignWidth="700" Height="50">
    <Grid  Width="700" Height="50" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="395*"/>
            <ColumnDefinition Width="234*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Image x:Name="FileTypeImage"></Image>
        </Grid>
        <Grid Grid.Column="1">
            <Label x:Name="FileNameLabel" Content="" VerticalAlignment="Center" FontSize="20"></Label>
        </Grid>
        <Grid Grid.Column="2">
            <Label x:Name="AccessTimeLabel" Content="" VerticalAlignment="Center" FontSize="20"></Label>
        </Grid>

    </Grid>
</ListBoxItem>
